<main class="p-5">

  <div class="card">
    <div class="nav">
      <div class="nav item">
        {{#with navigation}}
          {{#each links}}
          {{#if href}}
            <a href={{href}} class='nav-link' target='_blank'>{{text}}</a>
            {{else}}
            <a href='#' class='nav-link disabled' target='_blank'>{{text}}</a>
          {{/if}}
          {{/each}}
        {{/with}}
      </div>
    </div>
  </div>

  <div><h1 class="my-5">{{header}}</h1></div>

  <div class='row'>
    <div class="col-8">
      
      {{#with contacts_data}}
        <h3>{{title}}</h3>
        <div>
          {{#each buttons}}
            {{#if isPrimary}}
              <button type="button" class="btn btn-warning">{{text}}</button>
            {{/if}}
            {{#if isOutline}}
              <button type="button" class="btn btn-outline-warning">{{text}}</button>
            {{/if}}
          {{/each}}
        </div>

        {{#with form}}
          {{#with input}}
            <div class="row">
              {{#with surname}}
                  <div class="col-6 mt-3">
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                  </div>
              {{/with}}
              {{#with name}}
                <div class="col-6 mt-3">
                  <label class="form-label">{{label}}</label>
                  <input class="form-control" placeholder="{{placeholder}}">
                  <div class="form-text">{{caption}}</div>
                </div>
              {{/with}}
            </div>
            <div class="row">
              {{#with phone}}
                <div class="col-6 mt-3">
                  <label class="form-label">{{label}}</label>
                  <input class="form-control" placeholder="{{placeholder}}">
                  <div class="form-text">{{caption}}</div>
                </div>
              {{/with}}
              {{#with email}}
                <div class="col-6 mt-3">
                  <label class="form-label">{{label}}</label>
                  <input class="form-control" placeholder="{{placeholder}}">
                  <div class="form-text">{{caption}}</div>
                </div>
              {{/with}}
            </div>
          {{/with}}
          <hr class="my-3">
          {{#each switch}}
            <div class="form-check form-switch py-2">
              <input type="checkbox" class="form-check-input" {{#if isActive}}checked{{/if}}>
              <label class="form-check-label">{{text}}</label>
            </div>
          {{/each}}
          <hr class="my-3">
        {{/with}}
      {{/with}}
    </div>
    
    <div class="col-4">
      <div class="card p-2">
        {{#each action_block}}
          <div class="nav flex-column">
            <div class="nav item my-1">
              {{#if isSuccess}}
              <button type="button" class="btn btn-success">{{text}}</button>
              {{else isDanger}}
              <button type="button" class="btn btn-danger">{{text}}</button>
              {{else isInfo}}
              <button type="button" class="btn btn-info">{{text}}</button>
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
      <div class="card p-2 mt-1">
        {{#with total}}
          <div><h3>{{title}}</h3></div>
          {{#each item_list}}
            <div>{{name}}: {{price}}</div>
          {{/each}}
          <hr class="my-1">
          {{#each additional_info}}
            <div>{{text}}: {{value}}</div>
          {{/each}}
          <hr class="my-1">
          {{#with total_price}}
            <div>{{text}}: {{value}}</div>
          {{/with}}
          <hr class="my-1">
          {{#each button}}
            {{#if isPrimary}}
              <div>
                <button type="button" class="btn btn-primary btn-sm my-1">
                  {{text}}
                </button>
              </div>
            {{/if}}
            {{#if isOutline}}
              <div>
                <button type="button" class="btn btn-outline-primary btn-sm">
                  {{text}}
                </button>
              </div>
            {{/if}}
          {{/each}}
        {{/with}}
      </div>
    </div>
  </div>

  <div class='row'>
    <div class="col-8">
      {{#with delivery}}
        <div class="ms-1"><h3>{{title}}</h3></div>
          <div class="card p-2">
            <div class='row'>
              {{#each select}}
              <div class="col-6">
                <label class="form-label">{{label}}</label>
                <select class="form-select form-select-sm">
                  <option selected>{{placeholder}}</option>
                  {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                  {{/each}}
                </select>
              </div>
              {{/each}}
            </div>
          </div>
        </div>

        <div class="mt-3">
          {{#each delivery_type}}
            <div class="form-check">
              <label class="form-check-label">{{type}}</label>
              <input name="dostavka" type="radio" class="form-check-input">
            </div>
          {{/each}}
        </div>
        <hr class="my-2 col-8">
        {{#with payment}}
          <div class="ms-1"><h3>{{title}}</h3></div>
          {{#each list}}
            <div class="form-check">
              <label class="form-check-label">{{type}}</label>
              <input name="oplata" type="radio" class="form-check-input">
            </div>
            <div class="form-text pb-2">{{description}}</div>
          {{/each}}
        {{/with}}
        <hr class="my-2 col-8">
        {{#with contact}}
          <div class="ms-1"><h3>{{title}}</h3></div>
          <div class="row">
            {{#with surname}}
                <div class="col-4 mt-3">
                  <label class="form-label">{{label}}</label>
                  <input class="form-control" placeholder="{{placeholder}}">
                  <div class="form-text">{{caption}}</div>
                </div>
            {{/with}}
            {{#with name}}
              <div class="col-4 mt-3">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                <div class="form-text">{{caption}}</div>
              </div>
            {{/with}}
          </div>
          <div class="row">
            {{#with phone}}
              <div class="col-4 mt-3">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                <div class="form-text">{{caption}}</div>
              </div>
            {{/with}}
            {{#with email}}
              <div class="col-4 mt-3">
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                <div class="form-text">{{caption}}</div>
              </div>
            {{/with}}
          </div>
        {{/with}}
        <hr class="my-2 col-8">
        {{#with coment}}
          <div class="col-8 mt-3">
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
          </div>
        {{/with}}

      {{/with}}
      <hr class="my-3 col-8">
      {{#with coupon}}
        <div class="ms-1"><h3>{{title}}</h3></div>
        {{#with select}}
          {{#with availabel_coupon}}
            <div class="col-8 mb-3">
              <label class="form-label">{{label}}</label>
              <select class="form-select form-select-lg">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                  <option value="{{value}}">{{text}}</option>
                {{/each}}
              </select>
            </div>
          {{/with}}
          {{#with friend_coupon}}
            <div class="col-8 mb-3">
              <label class="form-label">{{label}}</label>
              <select class="form-select form-select-sm">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                  <option value="{{value}}">{{text}}</option>
                {{/each}}
              </select>
            </div>
          {{/with}}          
        {{/with}}
        {{#with add}}
          {{#with friend}}
            <div class="col-8 mb-3">
              <label class="form-label">{{label}}</label>
              <input class="form-control form-select-lg" placeholder="{{placeholder}}">
              <div class="form-text">{{caption}}</div>
            </div>
          {{/with}}
          {{#with colleague}}
            <div class="col-8 mb-3">
              <label class="form-label">{{label}}</label>
              <input class="form-control form-select-sm" placeholder="{{placeholder}}">
              <div class="form-text">{{caption}}</div>
            </div>
          {{/with}}
        {{/with}}
      {{/with}}
      <hr class="my-2 col-8">
      {{#with quiz}}
        <div class="ms-1"><h3>{{title}}</h3></div>
        {{#with preference}}
          <div>{{title}}</div>
          {{#each options}}
            <div class="form-check">
              <label class="form-check-label">{{this}}</label>
              <input name="options" type="radio" class="form-check-input">
            </div>
          {{/each}}
        {{/with}}
        {{#with your_expirience}}
          <div class="col-8 mt-2">
            <label class="form-label">{{label}}</label>
            <input class="form-control">
          </div>
        {{/with}}
        {{#with purchase_frequency}}
          <div class="col-8 mt-3">
            <label class="form-label">{{label}}</label>
            <select class="form-select form-select-sm">
              <option selected>{{placeholder}}</option>
              {{#each options}}
                <option value="{{value}}">{{text}}</option>
              {{/each}}
            </select>
          </div>
        {{/with}}
        {{#with factors}}
          <div class="mt-3">{{title}}</div>
          {{#each options}}
            <div class="form-check">
              <label class="form-check-label">{{this}}</label>
              <input type="checkbox" class="form-check-input">
            </div>
          {{/each}}
        {{/with}}
      {{/with}}
    </div>
  </div>
  <hr class="my-2">
  
  <div class='row'>
    <div class="nav">
      {{#each footer}}
        <div class='col-2'>
        {{#each this}}
          <a href={{link}} class='nav-link' target='_blank'>
            {{text}}
          </a>
        {{/each}}     
        </div>
      {{/each}}
    </div>
  </div>

</main>