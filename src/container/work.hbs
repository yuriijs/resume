{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>

  {{#with main}}
    <main>
      <section>
        {{> title data="Work history" big=true}}
        <div>
          <ul>
            {{#each works}}
              <li>
                <div>{{position}}</div>

                <br>

                <div>{{duration.from}} - {{#if duration.to}} {{duration.to}} {{else}} (еще работаем) {{/if}}</div>

                <br>

                <div>
                  {{#if company.url}}
                    {{> link text=company.name href=company.url blank=true noLine=true}}
                  {{else}}
                    <b>{{company.name}}</b>
                  {{/if}}
                </div>

                <br>
                <br>

                <div>
                  <strong>Projects ({{projectAmount}})</strong>
                </div>

                <br>

                <ul>

                  {{#each projects}}
                  <li>
                    <div>{{> link text=name href=url blank=true noLine=true}}</div>
                    <br>
                    <div>
                      <p>{{about}}</p>
                    </div>
                    <br>
                    <div>
                      <em>Project stacks:</em>({{stackAmount}})
                    </div>
                    <br>
                    <div>
                      {{#each stacks}}
                        <li>{{name}}</li>
                      {{/each}}
                    </div>
                    <br>
                    <div>
                      <em>Project awards:</em>
                    </div>
                    <br>
                    <div>
                      {{#each awards}}
                        <li>{{name}}</li>
                      {{/each}}
                    </div>
                  </li>
                  {{/each}}
                </ul>
              </li>
              <br>
            {{/each}}
          </ul>
        </div>
      </section>


    </main>
  {{/with}}

</div>

