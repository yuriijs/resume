{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main class="pt-5">

  {{#with main}}
    <section>
      {{> title data="Work history" big=true}}
      <div>
        <ul class="mt-4">
          {{#each works}}
            <li>
              <div>{{position}}</div>
              <div>{{duration.from}} - {{#if duration.to}} {{duration.to}} {{else}} (еще работаю) {{/if}}</div>
              <div>
                {{#if company.url}}
                  {{> link text=company.name href=company.url blank=true noLine=true}}
                {{else}}
                  <b>{{company.name}}</b>
                {{/if}}
              </div>
              <div class="mt-3">
                <strong>Projects ({{projectAmount}})</strong>
              </div>
              <ul>
                {{#each projects}}
                <li>
                  <div>{{> link text=name href=url blank=true noLine=true}}</div>
                  <div>
                    <p>{{about}}</p>
                  </div>
                  <div class="mt-4">
                    <em>Project stacks:</em>({{stackAmount}})
                  </div>
                  <div>
                    {{#each stacks}}
                      <li>{{name}}</li>
                    {{/each}}
                  </div>
                  <div class="mt-4 ms-4">
                    <em>Project awards:</em>
                  </div>
                  <div>
                    {{#each awards}}
                      <li>{{name}}</li>
                    {{/each}}
                  </div>
                </li>
                {{/each}}
              </ul>
            </li>
          {{/each}}
        </ul>
      </div>
    </section>
  {{/with}}

</main>

